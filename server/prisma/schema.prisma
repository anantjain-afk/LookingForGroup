generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(cuid())
  email      String   @unique
  username   String   @unique
  password   String
  avatar     String?
  bio        String?
  karmaScore Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  lobbiesHosted Lobby[]            @relation("HostedLobbies")
  lobbiesJoined LobbyParticipant[]
}

model Game {
  id        String   @id @default(cuid())
  igdbId    Int?     @unique
  name      String   @unique
  genre     String?
  imageUrl  String?
  lobbies   Lobby[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Tag {
  id       String     @id @default(cuid())
  name     String     @unique
  category String
  lobbies  LobbyTag[]
}

model Lobby {
  id          String  @id @default(cuid())
  title       String
  description String?
  status      String  @default("OPEN") // OPEN, FULL, IN_GAME
  maxPlayers  Int     @default(5)
  credentials String?

  hostId String
  host   User   @relation("HostedLobbies", fields: [hostId], references: [id])

  gameId String
  game   Game   @relation(fields: [gameId], references: [id])

  participants LobbyParticipant[]
  tags         LobbyTag[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model LobbyParticipant {
  id       String   @id @default(cuid())
  userId   String
  user     User     @relation(fields: [userId], references: [id])
  lobbyId  String
  lobby    Lobby    @relation(fields: [lobbyId], references: [id])
  role     String   @default("MEMBER") // HOST, MEMBER
  isReady  Boolean  @default(false)
  joinedAt DateTime @default(now())

  @@unique([userId, lobbyId])
}

model LobbyTag {
  lobbyId String
  lobby   Lobby  @relation(fields: [lobbyId], references: [id])
  tagId   String
  tag     Tag    @relation(fields: [tagId], references: [id])

  @@id([lobbyId, tagId])
}
